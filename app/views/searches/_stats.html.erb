<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <h2 class="subtitle is-4">Search Stats</h2>
        <ul>
          <% Search.history(@search.keyword).each do |stats| %>
              <li><%= "#{stats[0]}- #{stats[1].strftime("%m/%d/%y %H:%M:%S")} "%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </article>
</div>
