<h1 class="subtitle">Find your next job</h1>
<%= form_for :search, url: searches_path, remote: true do |f| %>
  <div class="field">
    <div class="control">
    <%= f.text_field :keyword, class: 'input is-large', placeholder: "Rails", required: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit 'Search Jobs', class: 'button is-primary' %>
    </div>
  </div>
<% end %>
